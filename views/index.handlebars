<div class="container content">
    <div class=jumbotron>
    <h1 id="roboto" class="display-2">Welcome to the</h1>
    <h1 id="redtext" class="display-4">Eat-Da-Burger!</h1>
     <p class="lead"></p>Welcome to the stie.  Add a burger or devour an exsisting one!!!!.</p>
    </div>

<div class="row">
    <h2>Add a Burger</h2>
    <form class="add-form">
    <div class="form-group">
    <label for="name_inout">Burger Name:</label>
    <input type="text" id="name_input" name="burger_name">
  
    <button type="submit">Add Burger</button>
    </form>
    </div>

    <br>
    <hr>

<div class="row">
    <div class ="col-sm-5">
        <ul>
        {{#each burgers}}
        {{#unless this.devoured }}
            {{!-- {{> burgers/burger-block }} --}}
        <ul>
	    <button class="btn btn-success btn-sm devour" data-id="{{id}}" data-devourState="{{devoured}}">
	    {{#unless devoured}}DEVOUR IT!{{/unless}}
	    </button>
	    {{burger_name}}
        </ul>
        {{/unless}}
         {{/each}}
        </ul>
        </div>
    <div class ="col-sm-5">
        <ul>
        {{#each burgers}}
        {{#if this.devoured }}
            {{!-- {{> burgers/burger-block }} --}}
        <ul>
	    <button class="btn btn-danger btn-sm undevour" data-id="{{id}}" data-devourState="{{devoured}}">
	    {{#if devoured}}ORDER AGAIN{{/if}}
	    </button>
	    {{burger_name}}
        </ul>
        {{/if}}
        {{/each}}
        </ul>
    </div>

</div>
</div>
</div>
